{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "jsx": "react-native",
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@futureproof/client": ["*"],
    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
