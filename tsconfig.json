{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@typings/*": ["typings/src/ts/*"],
      "@components/*": ["components/*"]
    },
  },
  "include": ["**/*.ts", "**/*/.tsx"],
  "exclude": ["node_modules"]
}
